<!-- Plugin Configuration File: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN, cannot be changed between the plugin versions. -->
    <id>dev.lp4.HytaleModdingTool</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>HytaleModdingTool</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://lp4.dev">LP4.dev</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        This plugin helps with Modding Hytale, a popular game developed by Hypixel.
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.compose</depends>

    <depends>com.intellij.java</depends>
    <resource-bundle>messages.MyMessageBundle</resource-bundle>
    <!-- Extensions defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="MyToolWindow" factoryClass="dev.lp4.hytalemoddingtool.MyToolWindowFactory"
                    icon="AllIcons.Toolwindows.ToolWindowPalette"/>
        <fileEditorProvider implementation="dev.lp4.hytalemoddingtool.ui.HytaleUiFileEditorProvider"/>

        <fileType name="Hytale UI" implementationClass="dev.lp4.hytalemoddingtool.lang.HytaleUiFileType"
                  extensions="ui"/>
        <lang.syntaxHighlighterFactory language="HytaleUI"
                                       implementationClass="dev.lp4.hytalemoddingtool.lang.HytaleUiSyntaxHighlighterFactory"/>
        <lang.parserDefinition language="HytaleUI"
                               implementationClass="dev.lp4.hytalemoddingtool.lang.HytaleUiParserDefinition"/>
        <completion.contributor language="HytaleUI"
                                implementationClass="dev.lp4.hytalemoddingtool.lang.HytaleUiCompletionContributor"/>
        <colorProvider implementation="dev.lp4.hytalemoddingtool.lang.HytaleUiColorProvider"/>
    </extensions>
</idea-plugin>